<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".new_setting">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F2F554"
        android:gravity="left"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="플레이어"
            android:layout_marginLeft="20dp"
            android:textColor="#000000"
            android:fontFamily="@font/spoqamedium"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textSize="15dp"

            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F2F1F1"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_margin="20sp"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <EditText
                        android:id="@+id/player_name1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/spoqamedium"

                        android:hint="이름입력" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="님"
                        android:fontFamily="@font/spoqamedium"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="안녕하세요 오늘도 "
                        android:fontFamily="@font/spoqaregular"
                        android:textSize="10sp"
                        />
                    <TextView
                        android:id="@+id/player2vs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="~~~"
                        android:fontFamily="@font/spoqaregular"
                        android:textSize="10sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="님과 뜨거운 승부!"
                        android:fontFamily="@font/spoqaregular"
                        android:textSize="10sp"
                        />
                </LinearLayout>


            </LinearLayout>

            <Button


                android:id="@+id/player01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"

                android:background="@drawable/simplebtn"
                android:fontFamily="@font/spoqamedium"
                android:text="이름 설정" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_margin="20sp"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <EditText
                        android:id="@+id/player_name2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/spoqamedium"

                        android:hint="이름입력" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="님"
                        android:fontFamily="@font/spoqamedium"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="안녕하세요 오늘도 "
                        android:fontFamily="@font/spoqaregular"
                        android:textSize="10sp"
                        />
                    <TextView
                        android:id="@+id/player1vs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="~~~"
                        android:fontFamily="@font/spoqaregular"
                        android:textSize="10sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="님과 뜨거운 승부!"
                        android:fontFamily="@font/spoqaregular"
                        android:textSize="10sp"
                        />
                </LinearLayout>

            </LinearLayout>

            <Button

                android:id="@+id/player02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"

                android:background="@drawable/simplebtn"
                android:fontFamily="@font/spoqamedium"
                android:text="이름 설정" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F2F554"
            android:gravity="left"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="점수 설정"
                android:layout_marginLeft="20dp"
                android:textColor="#000000"
                android:fontFamily="@font/spoqamedium"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="15dp"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_margin="20sp"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <EditText
                        android:id="@+id/settingscore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/spoqamedium"

                        android:hint="점수입력" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="점수 설정하기"
                        android:fontFamily="@font/spoqamedium"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="내기 점수를 설정해 주세요"
                    android:fontFamily="@font/spoqaregular"
                    android:textSize="10sp"
                    />

            </LinearLayout>

            <Button
                android:id="@+id/settingscore_btn"
                android:layout_marginTop="17dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="점수 설정"

                android:fontFamily="@font/spoqamedium"
                android:background="@drawable/simplebtn"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#242BFC"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/bell"
                />
            <TextView
                android:gravity="center"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="게임을 시작하기 위해서는 먼저 설정을 하셔야 합니다"
                android:textColor="#ffffff"
                android:fontFamily="@font/spoqaregular"
                android:textSize="13dp"
                />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F2F554"
            android:gravity="left"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="경기 설명"
                android:layout_marginLeft="20dp"
                android:textColor="#000000"
                android:fontFamily="@font/spoqamedium"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="15dp"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="10X10 크기의 경기 판에서 이루어지는 박진감 넘치는 보드게임 승부입니다. 서로 1턴에 1개씩 번가라 가며
돌을 놓고 먼저 가로 또는 세로 또는 대각선으로 4개의 선을 긋는 사람이 승리하는 게임입니다. "
                android:textSize="14dp"
                android:fontFamily="@font/spoqaregular"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                />


        </LinearLayout>



    </LinearLayout>









</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="60dp"
        >

        <Button
            android:id="@+id/go_main1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/simplebtn"
            android:fontFamily="@font/spoqamedium"
            android:text="게임시작" />
    </LinearLayout>

</LinearLayout>