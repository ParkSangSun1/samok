        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#242BFC"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/bell"
                />
            <TextView
                android:gravity="center"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="게임을 시작하기 위해서는 먼저 설정을 하셔야 합니다"
                android:textColor="#ffffff"
                android:fontFamily="@font/spoqaregular"
                android:textSize="13dp"
                />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F2F554"
            android:gravity="left"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="경기 설명"
                android:layout_marginLeft="20dp"
                android:textColor="#000000"
                android:fontFamily="@font/spoqamedium"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="15dp"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="10X10 크기의 경기 팜에서 이루어지는 박진감 넘치는 한판 승부입니다. 서로 번가라 가며
돌을 놓고 먼저 가로 또는 세로 또는 대각선으로 4개의 선을 긋는 사람이 승리하는 게임입니다."
                android:textSize="12dp"
                android:fontFamily="@font/spoqaregular"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F2F554"
            android:gravity="left"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Q &amp; A"
                android:layout_marginLeft="20dp"
                android:textColor="#000000"
                android:fontFamily="@font/spoqamedium"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="15dp"

                />

        </LinearLayout>


    </LinearLayout>

